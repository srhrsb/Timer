<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="294.0" prefWidth="368.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.brh.Controller">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>

    <Label fx:id="welcomeText" />

    <RadioButton fx:id="radio1" layoutX="30.0" layoutY="105.0" mnemonicParsing="false" text="1 Minute" />
   <RadioButton fx:id="radio2" layoutX="30.0" layoutY="68.0" mnemonicParsing="false" text="4 Minuten Ei" />
   <RadioButton fx:id="radio3" mnemonicParsing="false" text="Hart gekochtes Ei" />

   <Separator prefWidth="200.0" />
   <HBox layoutX="30.0" layoutY="204.0" prefHeight="20.0" prefWidth="328.0">
      <children>
         <Label prefHeight="27.0" prefWidth="102.0" text="Beschreibung" />
         <TextField fx:id="descriptionTf" prefHeight="26.0" prefWidth="232.0" />
      </children>
   </HBox>
   <HBox prefHeight="20.0" prefWidth="328.0">
      <children>
         <Label prefHeight="27.0" prefWidth="102.0" text="Zeit" />
         <TextField fx:id="timeTf" prefHeight="26.0" prefWidth="232.0" />
      </children>
   </HBox>
  <Button onAction="#startTimer" prefHeight="26.0" prefWidth="337.0" text="Start" />
</VBox>
